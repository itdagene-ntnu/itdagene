  width 100%
  height 360px
  background-size cover !important
  padding-top 90px

  .hsp-header
    color #FFF
    font-family hsp-font
    font-size 28px
    margin-top 5px

  .hsp-logo
    padding-top 20px
    margin-top 20px

  .location-header
    color #FFF
    font-family banner-font
    font-size 40px
    padding-top 20px

    @media (max-width: 580px)

      .hsp-header
        font-size 20px

